<style>
  .somebody {
    color: red;
  }
  .somebody1 {
    color: red;
  }
  .somebody:hover {
    color: #730E15;
  }

  .devil {
    display: flex;
    /*justify-content: space-around;*/

  }
    .second_devil {
      padding: 40px;
    }
</style>

<div class="container alert alert-light form-group">
  <p id="notice"><%= notice %></p>
  <%= link_to 'To home page', seances_path , class:"somebody"%>
  <hr>
  <div class = "devil">
    <div class = "first_devil">
      <p>
        <h3 class="somebody1"><%= link_to "#{Film.find(@seance.film_id).name}",  film_path(@seance.film_id), class:"somebody"%></h3>
      </p>
      <div><%= image_tag Film.find(@seance.film_id).image.url(:large) %> </div>
      </div>

      <div class = "second_devil">

      <p>
        <strong>Time:</strong>
        <%= @seance.time %>
      </p>

      <p>
        <strong>Hall:</strong>
        <%= Hall.find(@seance.hall_id).title %>
      </p>

      <p>
        <strong>Running time:</strong>
        <%= Film.find(@seance.film_id).triv %>
      </p>

      <p>
        <strong>Rated:</strong>
        <%= Film.find(@seance.film_id).obmezh %>
      </p>

      <p>
        <strong>Format:</strong>
        <%= Film.find(@seance.film_id).format %>
      </p>
    </div>
  </div>

  <hr>
  <p>
    <strong>Description:</strong>
    <br>
    <%= Film.find(@seance.film_id).description %>
  </p>

  <% if Film.find(@seance.film_id).youtube_link? %>
    <hr>
    <iframe width="600" height="400"
            src="<%=Film.find(@seance.film_id).youtube_link%>">
    </iframe>
  <% end %>
  <hr>
  <% if current_user && current_user.admin == true %>
    <%= link_to 'Edit', edit_seance_path(@seance), class:"btn btn-info" %>
    <% end %>

</div>