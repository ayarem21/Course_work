<!DOCTYPE html>
<html>
  <head>
    <title>Seances</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/cea9c7549d.js" crossorigin="anonymous"></script>
    <head>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <i class="fab fa-accessible-icon" style="color:black"></i>
        <%= link_to "Blog", seances_path, class: "navbar-brand "%>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navb" aria-expanded="true">
          <span class="navbar-toggler-icon"></span>
        </button>
        <ul class="nav navbar-nav ml-auto">
          <% if current_user %>
            <li class="nav-item">
              <a class="nav-link" href="#" style="color:black"><span class="fas fa-user"></span><%= current_user.email %>.</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout" style="color:black"><span class="fas fa-sign-in-alt"></span>Logout</a>
            </li>
          <% else %>

            <li class="nav-item">
              <a class="nav-link" href="/registration" style="color:black"><span class="fas fa-user"></span>Create account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login" style="color:black"><span class="fas fa-sign-in-alt"></span>Log in</a>
            </li>
          <% end %>
        </ul>
        </div>
      </nav>
  </head>

  <body class= "sp-3 mb-2 bg-secondary text-white">
    <%= yield %>
  </body>
</html>
